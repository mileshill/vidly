@model IEnumerable<vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "../Shared/_Layout.cshtml";
}


<h2>Movies</h2>

<a class="btn btn-primary" style="margin-bottom:0.5em;" asp-controller="Movies" asp-action="New">NEW MOVIE</a>

@if(!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>  
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td><a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
                <td>@movie.Genre</td>
            </tr>
        }       
    </tbody>
</table>
}



