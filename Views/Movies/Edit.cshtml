@model vidly.Models.Movie

@{
    ViewBag.Title = @Model.Name;
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre</li>
    <li>In Stock: @Model.NumberInStock</li>
    <li>Release Date: @Model.ReleaseDate.ToString("yyyy/MM/dd")</li>
    <li>Inventory Date: @Model.Added.ToString("yyyy/MM/dd")</li>
</ul>